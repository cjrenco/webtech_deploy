<div class="container">
  <h1>New Answer</h1>

  <%= form_with(model: @answer, url: course_lesson_forum_question_answers_path(@question.forum.lesson.course, @question.forum.lesson, @question.forum, @question), local: true) do |form| %>
    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: 'form-control' %>
    </div>
    <%= form.submit 'Create Answer', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back to Answers', course_lesson_forum_question_answers_path(@question.forum.lesson.course, @question.forum.lesson, @question.forum, @question), class: 'btn btn-secondary' %>
</div>